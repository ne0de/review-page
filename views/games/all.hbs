<div id="titulo">
    <div class="container" style="margin-top: 3%;">

        <div class="container">
            {{#each allGames}}
            <div class="row border border-primary mb-5">
                <div class="col">
                    <img width="550px" src="{{image}}" />
                </div>
                <div class="col">
                    <h2 class="text-secondary text-center">
                        {{name}}
                    </h2>

                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary"> Desarrollador:</h5>
                        <h5 class="text-white">{{developer}} </h5>
                    </div>

                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary mr-1"> Lenguaje:</h5>
                        <h5 class="text-white">{{languague}}</h5>
                    </div>
                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary mr-1"> modo de juego:</h5>
                        <h5 class="text-white">{{multiplayer}}</h5>
                    </div>
                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary mr-1"> fecha de lanzamiento:</h5>
                        <h5 class="text-white">{{convertUntilNow release}}</h5>
                    </div>
                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary"> Desarrollador:</h5>
                        <h5 class="text-white">{{developer}}</h5>
                    </div>
                    <div class="d-flex justify-content-start">
                        <h5 class="text-secondary"> Genero:</h5>
                        <h5 class="text-white">{{genre}}</h5>
                    </div>
                </div>
                <div class="container w-100 mt-3">
                    <h5 class="text-white text-left">
                        {{description}}
                    </h5>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>
<hr />