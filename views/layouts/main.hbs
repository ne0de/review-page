<html lang="en">

<head>
    <!-- Custom main css -->
    <link rel="stylesheet" href="/stylesheets/main.css">

    <!-- Cusstom footer css -->
    <link rel="stylesheet" href="/stylesheets/footer.css">

    <!-- Bootstrap && jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.js"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark container" style="background-color: #00182f; ">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <a class="navbar-brand" href="#">Rincón del Gaming</a>
        </div>

        <div class="mx-auto order-0">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/games/all">Juegos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/review/all">Reseñas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/review/popular">Populares</a>
                </li>
            </ul>
        </div>

        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                {{#if login}}
                <div class="dropdown">
                    <button class="btn btn-outline-primary text-white dropdown-toggle" type="button" id="dropdownMenu2"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{nickname}}
                    </button>
                    <div class="dropdown-menu dropdown-menu-lg-left" aria-labelledby="dropdownMenu2">
                        <a class="dropdown-item" href="/user/profile" type="">Mi perfil</a>
                        <a class="dropdown-item" href="/user/edit" type="">Editar perfil</a>
                        <a class="dropdown-item" href="/review/create" type="">Crear reseña</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/user/salir" type="">Salir</a>
                    </div>
                </div>
                {{else}}
                <a href="/user/login" class="btn btn-outline-success mr-2 text-white">Accede</a>
                <a href="/user/register" class="btn btn-outline-info text-white">Regístrate</a>
                {{/if}}

            </ul>
        </div>
    </nav>

    {{>error}}

    <div class="container">
        {{{body}}}
    </div>

    <footer class="justify-content-center mt-5">
        <div class="container">
            <div class="col-md-12 text-center text-gray-lighter">
                <section class="items">
                    <nav class="main-nav">
                        <a href="#"><span data-hover="FAQ">FAQ</span></a>
                        <a href="#"><span data-hover="Terminos">Terminos</span></a>
                        <a href="#"><span data-hover="Contacto">Contacto</span></a>
                    </nav>
                </section>
            </div>
            <div class="col-md-12 text-center mt-3">
                <p class="nota">© 2020 - El Rincón Del Gaming</p>
            </div>
        </div>
    </footer>
</body>

</html>